{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    // Possible Errors
    "no-await-in-loop": 1,
    "no-extra-parens": [1, "all"],
    "no-template-curly-in-string": 1,
    "valid-jsdoc": 1,

    // Best Practices
    "dot-notation": 1,
    "no-alert": 1,
    "no-caller": 1,
    "no-else-return": 1,
    "no-extra-bind": 1,
    "no-invalid-this": 1,
    "no-multi-spaces": [1, { "ignoreEOLComments": true }],
    "no-return-assign": 1,
    "no-return-await": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 1,
    "no-useless-call": 1,
    "require-await": 2,
    "wrap-iife": 2,

    // Node.js and CommonJS
    "no-path-concat": 2,

    // Stylistic Issues
    "comma-dangle": [1, "always-multiline"],
    "comma-spacing": 1,
    "jsx-quotes": 1,
    "no-multiple-empty-lines": [1, { "max": 2 }],
    "no-nested-ternary": 1,
    "no-unneeded-ternary": 2,
    "quotes": 0,
    "semi": [1, "never"],
    "unicode-bom": 1,

    // ECMAScript 6
    "arrow-body-style": [1, "as-needed"],
    "arrow-parens": [1, "as-needed"],
    "arrow-spacing": 1,
    "generator-star-spacing": 1,
    "no-duplicate-imports": 2,
    "no-useless-computed-key": 1,
    "no-useless-constructor": 1,
    "no-useless-rename": 1,
    "no-var": 1,
    "object-shorthand": 1,
    "prefer-arrow-callback": 1,
    "prefer-const": 1,
    "prefer-destructuring": 1,
    "prefer-rest-params": 1,
    "prefer-spread": 1,
    "require-yield": 2,
    "rest-spread-spacing": 1,
    "template-curly-spacing": 1,
    "yield-star-spacing": 1
  }
}
